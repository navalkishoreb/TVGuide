<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LoadingLayout"
    tools:context="edu.navalkishoreb.tvguide.login.LoggingView"
    >

  <TextView
      android:id="@+id/txt_loading_view"
      style="@style/LoadingText"
      android:text="@string/login_loading_text"
      />
  <ProgressBar
      android:layout_below="@id/txt_loading_view"
      android:layout_alignLeft="@id/txt_loading_view"
      android:layout_alignRight="@id/txt_loading_view"
      style="@style/LoadingProgressBar"
      tools:ignore="RtlHardcoded"
      />

</RelativeLayout>
